generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id String @default (uuid()) @id
  firstName String
  lastName String
  profilePicture String?
  emailAddress String @unique
  phoneNumber String @unique
  password String
  products Products []

  @@map ("user")
}

model Products {
  id               Int      @id @default(autoincrement())
  title      String
  description  String
  category    Float
  price  String
  rating String
  brand String
  reviews String
  CreatedAt DateTime @default (now())
  owner String
  user Users @relation(fields : [owner] ,references:[id])


  @@map ("products")
}


